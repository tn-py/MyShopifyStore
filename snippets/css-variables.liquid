{%- liquid
  assign color_scheme = settings.color_scheme
-%}
{% style %}
  :root {
    --font-primary--family: {{ settings.type_primary_font.family }}, {{ settings.type_primary_font.fallback_families }};
    --font-primary--style: {{ settings.type_primary_font.style }};
    --font-primary--weight: {{ settings.type_primary_font.weight }};
    --page-width: {{ settings.max_page_width }};
    --page-margin: {{ settings.min_page_margin }}px;
    --style-border-radius-inputs: {{ settings.input_corner_radius }}px;

    {% if color_scheme == 'latte' %}
      /* Catppuccin Latte */
      --ctp-rosewater: #dc8a78;
      --ctp-flamingo: #dd7878;
      --ctp-pink: #ea76cb;
      --ctp-mauve: #8839ef;
      --ctp-red: #d20f39;
      --ctp-maroon: #e64553;
      --ctp-peach: #fe640b;
      --ctp-yellow: #df8e1d;
      --ctp-green: #40a02b;
      --ctp-teal: #179299;
      --ctp-sky: #04a5e5;
      --ctp-sapphire: #209fb5;
      --ctp-blue: #1e66f5;
      --ctp-lavender: #7287fd;
      --ctp-text: #4c4f69;
      --ctp-subtext1: #5c5f77;
      --ctp-subtext0: #6c6f85;
      --ctp-overlay2: #7c7f93;
      --ctp-overlay1: #8c8fa1;
      --ctp-overlay0: #9ca0b0;
      --ctp-surface2: #acb0be;
      --ctp-surface1: #bcc0cc;
      --ctp-surface0: #ccd0da;
      --ctp-base: #eff1f5;
      --ctp-mantle: #e6e9ef;
      --ctp-crust: #dce0e8;
    {% elsif color_scheme == 'mocha' %}
      /* Catppuccin Mocha */
      --ctp-rosewater: #f5e0dc;
      --ctp-flamingo: #f2cdcd;
      --ctp-pink: #f5c2e7;
      --ctp-mauve: #cba6f7;
      --ctp-red: #f38ba8;
      --ctp-maroon: #eba0ac;
      --ctp-yellow: #f9e2af;
      --ctp-green: #a6e3a1;
      --ctp-teal: #94e2d5;
      --ctp-sky: #89dceb;
      --ctp-sapphire: #74c7ec;
      --ctp-blue: #89b4fa;
      --ctp-lavender: #b4befe;
      --ctp-text: #b4befe;
      --ctp-subtext1: #bac2de;
      --ctp-subtext0: #a6adc8;
      --ctp-overlay2: #9399b2;
      --ctp-overlay1: #7f849c;
      --ctp-overlay0: #6c7086;
      --ctp-surface2: #585b70;
      --ctp-surface1: #45475a;
      --ctp-surface0: #313244;
      --ctp-base: #1e1e2e;
      --ctp-mantle: #181825;
      --ctp-crust: #11111b;
    {% else %}
      /* Custom Colors */
      --ctp-base: {{ settings.custom_background_color }};
      --ctp-text: {{ settings.custom_foreground_color }};
      /* Add more custom color mappings if needed */
    {% endif %}

    /* ShadCN-inspired variables */
    --background: var(--ctp-base);
    --foreground: var(--ctp-text);
    --card: var(--ctp-mantle);
    --card-foreground: var(--ctp-text);
    --popover: var(--ctp-crust);
    --popover-foreground: var(--ctp-text);
    --primary: var(--ctp-mauve);
    --primary-foreground: var(--ctp-base);
    --secondary: var(--ctp-surface2);
    --secondary-foreground: var(--ctp-text);
    --muted: var(--ctp-surface1);
    --muted-foreground: var(--ctp-subtext1);
    --accent: var(--ctp-pink);
    --accent-foreground: var(--ctp-base);
    --destructive: var(--ctp-red);
    --destructive-foreground: var(--ctp-base);
    --border: var(--ctp-surface0);
    --input: var(--ctp-surface0);
    --ring: var(--ctp-mauve);
    --radius: {{ settings.input_corner_radius }}px;
  }
{% endstyle %}
